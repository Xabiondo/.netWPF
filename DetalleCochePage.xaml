<Page x:Class="xabiOFICIAL.DetalleCochePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:xabiOFICIAL"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="DetalleCochePage" Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Detalles del Coche" 
                       Foreground="White" 
                       FontSize="28" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Modelo: Volkswagen ID.7" 
                       Foreground="White" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Año: 2025" 
                       Foreground="White" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Precio: 50.000 €" 
                       Foreground="White" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Descripción: Sedán eléctrico con autonomía de 620 km, sistema de carga rápida y asistente de conducción avanzado." 
                       Foreground="White" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Width="500" 
                       Margin="0,0,0,20"/>

            <Button x:Name="BtnVolverCoche" Content="Volver" Width="300" Height="40" Background="Gray" Foreground="White" Click="BtnVolverCoche_Click"/>
        </StackPanel>
    </Grid>
</Page>