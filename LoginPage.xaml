<Page x:Class="xabiOFICIAL.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:xabiOFICIAL"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LoginPage" Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Iniciar Sesión" Foreground="White" FontSize="28" Margin="0,0,0,30"/>

            <Label Content="Usuario" Foreground="White" Margin="0,0,0,-5"/>
            <TextBox x:Name="TxtUsuario" Width="300" Height="40" Margin="0,0,0,10" Background="Gray" Foreground="White" BorderBrush="White"/>

            <Label Content="Contraseña" Foreground="White" Margin="0,0,0,-5"/>
            <PasswordBox x:Name="TxtContrasena" Width="300" Height="40" Margin="0,0,0,20" Background="Gray" Foreground="White" BorderBrush="White"/>

            <Button x:Name="BtnLogin" Content="Entrar" Width="300" Height="40" Background="Gray" Foreground="White" Click="BtnLogin_Click"/>

            <TextBlock Text="¿No tienes cuenta? Regístrate aquí" Foreground="White" Margin="0,20,0,0" HorizontalAlignment="Center"/>
            <Button x:Name="BtnIrASignup" Content="Ir a Registro" Width="300" Height="40" Background="Transparent" Foreground="White" BorderBrush="White" Click="BtnIrASignup_Click"/>
        </StackPanel>
    </Grid>
</Page>