<Page x:Class="xabiOFICIAL.DetalleOfertaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:xabiOFICIAL"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="DetalleOfertaPage" Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Oferta de Empleo" 
                       Foreground="White" 
                       FontSize="28" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Título: Desarrollador de Software" 
                       Foreground="White" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Ubicación: Madrid, España" 
                       Foreground="White" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Salario: 30.000 - 40.000 €" 
                       Foreground="White" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Descripción: Desarrollo de aplicaciones internas con C# y WPF." 
                       Foreground="White" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Width="500" 
                       Margin="0,0,0,20"/>

            <Button x:Name="BtnVolver" Content="Volver" Width="300" Height="40" Background="Gray" Foreground="White" Click="BtnVolver_Click"/>
        </StackPanel>
    </Grid>
</Page>