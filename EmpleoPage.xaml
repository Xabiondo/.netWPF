<Page x:Class="xabiOFICIAL.EmpleoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:xabiOFICIAL"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="EmpleoPage" Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Oportunidades de Empleo" 
                       Foreground="White" 
                       FontSize="28" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <Button x:Name="BtnVerOferta" Content="Ver Oferta" Width="300" Height="40" Background="Gray" Foreground="White" Click="BtnVerOferta_Click"/>
        </StackPanel>
    </Grid>
</Page>