<Window x:Class="xabiOFICIAL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xabiOFICIAL"
        mc:Ignorable="d"
        Title="Volkswagen" Height="700" Width="1200"
        Background="Black">
    <Grid>
        <!-- Navbar -->
        <Border Background="Black" Height="80" VerticalAlignment="Top" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0">
                    <!-- Logo de Volkswagen -->
                    <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/0/04/Volkswagen_logo_2019.svg/220px-Volkswagen_logo_2019.svg.png"
                           Height="50" Width="50" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <TextBlock Text="VOLKSWAGEN" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Botones de navegación -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button x:Name="BtnInicio" Content="Inicio" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                            FontSize="16" Margin="10" Click="BtnInicio_Click"/>
                    <Button x:Name="BtnEmpleo" Content="Empleo" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                            FontSize="16" Margin="10" Click="BtnEmpleo_Click"/>
                    <Button x:Name="BtnNoticias" Content="Noticias" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                            FontSize="16" Margin="10" Click="BtnNoticias_Click"/>
                    <Button x:Name="BtnCoches" Content="Coches" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                            FontSize="16" Margin="10" Click="BtnCoches_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Frame para mostrar páginas -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Margin="0,80,0,0" 
               Background="Black"/>
    </Grid>
</Window>